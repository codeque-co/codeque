{
  "name": "@codeque/cli",
  "version": "0.5.0",
  "description": "Multiline code search for every language. Structural code search for JavaScript, TypeScript, HTML and CSS",
  "bin": {
    "codeque": "./bin.js"
  },
  "author": "Jakub Mazurek (@jayu) <jakub.mazurek.dev@gmail.com>",
  "license": "Sustainable Use License",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeque-co/codeque"
  },
  "homepage": "https://codeque.co",
  "main": "dist/cli.js",
  "files": [
    "bin.js",
    "dist/**/*.js",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.3",
    "dedent": "^0.7.0",
    "release-it": "^15.0.0"
  },
  "dependencies": {
    "@babel/code-frame": "^7.18.6",
    "@codeque/core": "^0.4.0",
    "colorette": "^2.0.16",
    "commander": "^8.3.0",
    "ora": "^5.0",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "cli": "node dist/cli.js",
    "dev": "node dist/dev.js",
    "build": "rm -rf dist && yarn build:code",
    "build:watch": "rm -rf dist && yarn build:code --watch",
    "build:code": "tsc --project tsconfig.json",
    "docs-gen": "node tools/addDocsToReadme.js",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "echo 0",
    "test:circular": "dpdm --exit-code circular:1 --tree=false --warning=false './src/**'",
    "lint": "eslint --ext .js,.ts src",
    "lint:fix": "yarn lint --fix",
    "checks": "yarn lint && yarn typecheck",
    "release": "release-it"
  },
  "keywords": [
    "typescript",
    "javascript",
    "json",
    "search",
    "find",
    "match",
    "pattern",
    "matching",
    "ast",
    "regexp",
    "semantic",
    "static",
    "analysis",
    "structural",
    "syntax",
    "multiline",
    "refactor",
    "refactoring",
    "replace",
    "rewrite",
    "rewriting",
    "navigation",
    "multiline search",
    "structural search",
    "search and replace",
    "regexp search",
    "json search"
  ]
}
